
.login_img {
	width: 120rpx;
	height: 120rpx;
	border-radius: 10rpx;
	display: block;
	margin: 0 auto;
	margin-top: 120rpx;
	margin-bottom: 40rpx;
}
.login_line {
	width: 94%;
	margin: 60rpx auto;
	font-size: 28rpx;
	color: #545454;
	align-items: center;
}
.login_line_title {
	font-size: 28rpx;
	color: #333;
	width: auto;
}
.login_line_input {
	width: 50%;
	font-size: 26rpx;
}
.login_line_ver {
	font-size: 26rpx;
	color: #333;
	border: 1px solid #333;
	padding: 2rpx 5rpx;
	border-radius: 6rpx;
}
.row_btn {
	width: 80%;
	height: 100rpx;
	text-align: center;
	background-image: linear-gradient(to right, #fba3d9, #fe7e97);
	color: #ffffff;
	margin: 80rpx auto;
	border-radius: 60rpx;
	line-height: 100rpx;
}

